<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/reset-min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/base-min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/fonts-min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/fodt.js")" type="text/javascript"></script>
    @RenderSection("additionalHead", false)
    <script type="text/javascript">
        $(function () {
            var slideshow = new fodt.SlideshowController($("div.slideshow"));
            slideshow.start();
        });
    </script>
</head>

<body>
    <div class="home">
        <div class="head">
            <div class="navigation">
                <ul>
                    <li class="active">// <a href="#" title="home">Home</a></li>
                    @*<li>// <a href="#">Active</a></li>
                    <li>// <a href="#">About Us</a></li>*@
                </ul>
            </div>
            <div class="slideshow">
                <ul>
                    <li><img src="http://demo.tutorialzine.com/2010/09/html5-canvas-slideshow-jquery/img/photos/1.jpg" alt="slide" /></li>
                    <li><img src="http://demo.tutorialzine.com/2010/09/html5-canvas-slideshow-jquery/img/photos/2.jpg" alt="slide" /></li>
                    <li><img src="http://demo.tutorialzine.com/2010/09/html5-canvas-slideshow-jquery/img/photos/3.jpg" alt="slide" /></li>
                    <li><img src="http://demo.tutorialzine.com/2010/09/html5-canvas-slideshow-jquery/img/photos/4.jpg" alt="slide" /></li>
                </ul>
            </div>
        </div>
        <div class="body">
            <div class="sidebar">
                <ul>
                    @*<li>
                        <h1>Upcoming Events</h1>
                        <p>Come out and support our shows! More info here.</p>
                    </li>*@
                    @*<li class="icon rss">
                        <h1>Subscribe RSS</h1>
                        <p>Keep in touch with us.</p>
                    </li>*@
                    @*<li>
                        <h1>History Tidbit</h1>
                        <p>DramaTech is a Theater.</p>
                    </li>*@
                    <li>
