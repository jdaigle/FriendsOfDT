                            <li><a target="_blank" href="http://imdt.friendsofdt.org/">IMDT</a></li>
                            <li><a target="_blank" href="http://gt.entertainmentalumni.org/">GTEN</a></li>
                        </ul>
                    </li>
                    <li>
                        <h1>Social Networking</h1>
                        <ul class="links icon-list">
                            <li><a class="icon twitter" target="_blank" href="http://twitter.com/gtdramatech"></a></li>
                            <li><a class="icon fb" target="_blank" href="http://facebook.com/group.php?gid=5944506425"></a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="content">
                @RenderBody()
            </div>
        </div>
        <div class="foot">
            <p>&copy; @DateTime.Now.Year Friends Of DramaTech</p>
            <p>Contact the <a href="mailto:fodtadmin@cridion.com">webmaster</a></p>
        </div>
    </div>
</body>
</html>
