<div class="sidebar">
    <ul>
        <li>
        @if (!ViewBag.IsAuthenticated) {
            <script type="text/javascript">
                $(function () {
                    var controller = new fodt.ajaxFormController($("#signInForm"));
                    controller.onSuccess = function (form, data) {
                        if (data.errorCode != 0) {
                            var messages = form.find("div.messages");
                            messages.empty().html(data.message);
                            messages.show();
                            form.find("input[name='password']").val("");
                        }
                    };
                });
            </script>
            <h1>Sign In</h1>
            <form action="@Url.Action(MVC.Accounts.Login())" method="post" id="signInForm">
                <input type="text" name="emailAddress" placeholder="email" />
                <input type="password" name="password" placeholder="password" />
                <input type="hidden" name="returnUrl" value="@ViewContext.RequestContext.HttpContext.Request.Params["ReturnUrl"]" />
                <label for="login_persist">Remember Me:</label>@Html.CheckBox("persist", false, new { id = "login_persist" })
                <input type="submit" value="Sign In" />
            </form>
            <div class="notRegisteredNotice">
                <h3>New to FriendsOfDT.org?</h3>
                <a href="@Url.Action(MVC.Accounts.SignUp())">Sign Up Today!</a>
            </div>
        } else {
            <h1>Welcome back <strong>@(((FriendsOfDT.Models.Accounts.WebAccount)ViewBag.Account).FirstName)</strong>!</h1>
            <p><a href="@Url.Action(MVC.Accounts.SignOut())" title="sign out">Sign Out</a></p>
        }
        </li>
