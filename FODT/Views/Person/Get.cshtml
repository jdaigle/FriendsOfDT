@model FODT.Views.Person.GetViewModel

@section endOfHead {
    <style type="text/css">
        ul.media-banner {
        	margin-top: 15px;
        	margin-left: 0px;
        }
        ul.media-banner li {
        	list-style: none;
        	display: inline-block;
        }
    </style>
}

<div class="row">
    <div class="span3">
        @if (Model.MediaItemId != 1){
            <a href="@Url.Action(MVC.Person.GetPersonMedia(Model.PersonId, Model.MediaItemId))">
                <img src="@Url.Action(MVC.Media.GetItemThumbnail(Model.MediaItemId))" alt="@Model.FullName">
            </a>
        } else {
            <img src="@Url.Action(MVC.Media.GetItemThumbnail(Model.MediaItemId))" alt="@Model.FullName">
        }
        <hr />
        <i class="icon-th"></i>
        <span>|</span>
        <a href="@Url.Action(MVC.Person.ListPersonMedia(Model.PersonId))">@Model.RelatedMediaCount Images</a>
        &raquo; 
        <ul class="media-banner">
            @foreach (var item in Model.NewRelatedMedia)
            {
                <li><a href="@Url.Action(MVC.Person.GetPersonMedia(Model.PersonId, item))"><img src="@Url.Action(MVC.Media.GetItemTiny(item))" alt="@Model.FullName"></a></li>    
            }
        </ul>
        <a href="@Url.Action(MVC.Media.Upload())"><i class="icon-upload"></i> Upload an Image</a>
    </div>
    <div class="span6">
        <h1>@Model.FullName</h1>
        <h6><i class="icon-edit"></i> <a href="@Url.Action(MVC.Person.Edit())">Edit Person</a></h6>
        <h6><i class="icon-user"></i> Is this you? <a href="#" title="Claim this person so that you can edit so that you can edit the entry.">Claim this Person</a></h6>
        <hr />
        @if (!string.IsNullOrWhiteSpace(Model.Biography))
        {
            <p>
                @Html.Raw(Model.Biography)... <a href="#">See full bio</a> &raquo;
            </p>
            <hr />
        }

        @if (Model.Awards.Any())
        {
        <h4>Awards <small style="float:right;"><a href="#"><i class="icon-plus-sign"></i> Add Award</a></small></h4>
        
        <table class="table table-striped table-condensed table-hover">
            <tbody>
                @foreach (var item in Model.Awards.OrderByDescending(x => x.Year).ThenBy(x => x.Name))
                {
                <tr>
                    <td><a href="@Url.Action(MVC.Awards.ByYear(item.Year))">@item.Year</a></td>
                    <td>
                        @item.Name
                        @if (item.ShowId.HasValue)
                        {
                            @: for <a href="@Url.Action(MVC.Show.Get(item.ShowId.Value))">@ExtensionMethods.RearrangeShowTitle(item.ShowName)</a>
                        }
                    </td>
                    <td style="text-align: right;">
                            <a href="#" title="Edit"><i class="icon-edit"></i></a>
                            <a href="#" title="Remove"><i class="icon-remove-sign"></i></a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
        }

        @if (Model.ClubPositions.Any())
        {
        <h4>EC and Club Responsibilities</h4>
        <table class="table table-striped table-condensed table-hover">
            <tbody>
                @foreach (var item in Model.ClubPositions)
                {
                    <tr>
                        <td><a href="#">@item.Year</a></td>
                        <td>@item.Name</td>
                        <td style="text-align: right;">
                            <a href="#" title="Edit"><i class="icon-edit"></i></a>
                            <a href="#" title="Remove"><i class="icon-remove-sign"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        }

        @if (Model.CastRoles.Any())
        {
        <h4>Cast Credits</h4>
        <table class="table table-striped table-condensed table-hover">
            <tbody>
                @foreach (var item in Model.CastRoles.OrderByDescending(x => x.ShowYear).ThenByDescending(x => x.ShowQuarter).ThenBy(x => x.ShowName))
                {
                    <tr>
                        <td>@item.ShowQuarter.ToString() @item.ShowYear</td>
                        <td><a href="@Url.Action(MVC.Show.Get(item.ShowId))">@ExtensionMethods.RearrangeShowTitle(item.ShowName)</a></td>
                        <td>@item.Role</td>
                        <td style="text-align: right;">
                            <a href="#" title="Edit"><i class="icon-edit"></i></a>
                            <a href="#" title="Remove"><i class="icon-remove-sign"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        }

        @if (Model.CrewPositions.Any())
        {
        <h4>Crew Credits</h4>
        <table class="table table-striped table-condensed table-hover">
            <tbody>
                @foreach (var item in Model.CrewPositions.OrderByDescending(x => x.ShowYear).ThenByDescending(x => x.ShowQuarter).ThenBy(x => x.ShowName))
                {
                    <tr>
                        <td>@item.ShowQuarter.ToString() @item.ShowYear</td>
                        <td><a href="@Url.Action(MVC.Show.Get(item.ShowId))">@ExtensionMethods.RearrangeShowTitle(item.ShowName)</a></td>
                        <td>@item.Name</td>
                        <td style="text-align: right;">
                            <a href="#" title="Edit"><i class="icon-edit"></i></a>
                            <a href="#" title="Remove"><i class="icon-remove-sign"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        }
    </div>
</div>