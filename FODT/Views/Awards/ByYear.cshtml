@model FODT.Views.Awards.ByYearViewModel

<table width="80%" align="center">
    <tbody>
        <tr>
            <td width="25%"><a href="@Model.PreviousYearURL">&lt;--- Previous Year</a></td>
            <td>
                <center><h1>DT Banquet - Awards for @Model.Year</h1></center>
            </td>
            <td width="25%" align="right"><a href="@Model.NextYearURL">Next Year ---&gt;</td>
        </tr>
    </tbody>
</table>


<center>
    @foreach (var item in Model.Awards)
	{
        <span>
            @item.Name
            @if (item.AwardShowLinkURL != "")
            {
                @:- <a href="@item.AwardShowLinkURL">@item.AwardShowLinkText</a>
            }
            @if (item.AwardPersonLinkURL != "")
            {
                @:- <a href="@item.AwardPersonLinkURL">@item.AwardPersonLinkText</a>
            }
        </span>
        <br />
	}
</center>
