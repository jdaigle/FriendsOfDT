@model FODT.Views.Shows.GetShowMediaViewModel
<table align="center" width="100%">
    <tbody>
        <tr align="center">
            <td align="left" valign="top">
                @if (Model.PreviousId.HasValue)
                {
                    <a href="@Url.Action(MVC.Shows.GetShowMedia(Model.ShowId, Model.PreviousId.Value))">&lt;--- Previous Item</a>
                } else {
                    @:&lt;--- Previous Item
                }
            </td>
            <td align="center">
                <center><font size="+2">Media for <a href="@Url.Action(MVC.Shows.Get(Model.ShowId))">@ExtensionMethods.RearrangeShowTitle(Model.ShowTitle) (@Model.ShowYear)</a></font><br><br><a href="?action=media_upload">Upload more pictures for this show</a></center>
                <br>
                <br>
            </td>
            <td align="right" valign="top">
                @if (Model.NextId.HasValue)
                {
                    <a href="@Url.Action(MVC.Shows.GetShowMedia(Model.ShowId, Model.NextId.Value))">Next Item ---&gt;</a>
                } else {
                    @:Next Item ---&gt;
                }
            </td>
        </tr>
    </tbody>
</table>

@Html.Partial("MediaItem", Model.MediaItemViewModel)