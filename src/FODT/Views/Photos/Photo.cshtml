@model FODT.Views.Photos.PhotoViewModel
<p>
    <a href="@Model.PhotoURL" target="_blank"><img src="@Model.PhotoURL" class="img-responsive center-block img-thumbnail" /></a>
</p>

<div class="center-block" style="max-width: 400px;">
    <div>
        Uploaded on <strong>@Model.UploadDate</strong>.
        @if (Model.CanAddTag)
        {
            <div class="pull-right">
                <button class="btn btn-xs btn-primary js-edit-modal-link" data-url="@Model.AddTagURL">Tag Person/Show</button>
                <button class="btn btn-xs btn-danger" data-url="@Model.AddTagURL">Delete</button>
            </div>
        }
        <div class="clearfix"></div>
    </div>
    <div>
        @if (Model.RelatedShows.Any())
        {
            @:From @Model.Join(Model.RelatedShows,
                @<span>
                    <strong><a href="@item.ShowLinkURL">@item.ShowTitle (@item.ShowYear)</a></strong>
                    @if (item.CanDelete)
                    {
                        <a class="delete-button small" href="@item.DeleteURL" title="Delete">❌</a>
                    }
                </span>
                )
        }
    </div>
    <div>
        @if (Model.RelatedPeople.Any())
        {
            @:With @Model.Join(Model.RelatedPeople,
                @<span>
                    <strong><a href="@item.PersonLinkURL">@item.PersonFullname</a></strong>
                    @if (item.CanDelete)
                    {
                        <a class="delete-button small" href="@item.DeleteURL" title="Delete">❌</a>
                    }
                </span>
                )
        }
    </div>
</div>
