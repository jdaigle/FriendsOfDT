@model FODT.Views.Show.GetShowMediaViewModel
<table align="center" width="100%">
    <tbody>
        <tr align="center">
            <td align="left" valign="top">
                @if (Model.PreviousItemLinkURL != "")
                {
                    <a href="@Model.PreviousItemLinkURL">&lt;--- Previous Item</a>
                }
                else
                {
                    @:&lt;--- Previous Item
                }
            </td>
            <td align="center">
                <center><font size="+2">Media for <a href="@Model.ShowLinkURL">@ExtensionMethods.RearrangeShowTitle(Model.ShowTitle) (@Model.ShowYear)</a></font><br><br><a href="@Model.UploadLinkURL">Upload more pictures for this show</a></center>
                <br>
                <br>
            </td>
            <td align="right" valign="top">
                @if (Model.NextItemLinkURL != "")
                {
                    <a href="@Model.NextItemLinkURL">Next Item ---&gt;</a>
                }
                else
                {
                    @:Next Item ---&gt;
                }
            </td>
        </tr>
    </tbody>
</table>

@Html.Partial("MediaItem", Model.MediaItemViewModel)