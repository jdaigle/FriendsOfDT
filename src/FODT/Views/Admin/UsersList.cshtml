@{
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}
<table class="table table-condensed">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email Address</th>
            <th>Facebook</th>
            <th>Last Login</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>
                    @if (user.IsFacebook)
                    {
                        <img src="@user.FacebookPictureURL" class="img-thumbnail" style="height: 25px;" />
                        <a href="@user.FacebookURL">Profile</a>
                    }
                </td>
                <td>@user.LastLoginDateTime</td>
            </tr>
        }
    </tbody>
</table>