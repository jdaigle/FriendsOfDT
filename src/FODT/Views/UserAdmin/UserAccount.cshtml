@model FODT.Views.UserAdmin.UserAccountViewModel

<div class="modal fade" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <form method="POST" action="@Model.EditURL">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Edit @Model.Name</h4>
                </div>
                <div class="modal-body">

                    <div class="form-group">
                        <label>Name</label>
                        <input class="form-control" type="text" placeholder="@Model.Name" readonly>
                    </div>

                    <div class="form-group">
                        <label>Email</label>
                        <input class="form-control" type="text" placeholder="@Model.Email" readonly>
                    </div>

                    <h4>Permissions</h4>

                    <div class="checkbox">
                        <label>
                            <input type="checkbox" value="true" name="IsContributor" checked="checked" />
                            <strong>Contributor:</strong> Can make edits to own biography, upload images, and suggest edits to other pages.
                        </label>
                    </div>

                    <div class="checkbox">
                        <label>
                            <input type="checkbox" value="true" name="IsArchivist" checked="checked" />
                            <strong>Archivist:</strong> Can edit any page.
                        </label>
                    </div>

                    <div class="checkbox">
                        <label>
                            <input type="checkbox" value="true" name="IsAdmin" checked="checked" />
                            <strong>Admin:</strong> Can approve new users and modify permissions.
                        </label>
                    </div>

                    <p class="dt-callout dt-callout-info">
                        When editing names, please observe the following style rules:
                        Initials should not be followed by a period, nicknames do not
                        require quotes around them (they will be added later).
                    </p>

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save changes</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </form>
    </div>
</div>